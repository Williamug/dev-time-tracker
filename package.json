{
  "name": "dev-time-tracker",
  "displayName": "Dev Time Tracker",
  "description": "Dev Time Tracker is an extension that helps developers track their productivity while coding. It tracks time spent on projects, provides insights into code quality, and offers health-related reminders to maintain a healthy work-life balance.",
  "version": "1.5.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/williamug/dev-time-tracker.git"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "WilliamAsaba",
  "icon": "images/logo.png",
  "galleryBanner": {
    "color": "#333333",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "commandPalette": [
        {
          "command": "devtimetracker.togglePomodoro",
          "when": "true"
        },
        {
          "command": "devtimetracker.manageCustomReminders",
          "when": "true"
        },
        {
          "command": "devtimetracker.addCustomReminder",
          "when": "true"
        }
      ],
      "editor/title": [
        {
          "command": "devtimetracker.manageCustomReminders",
          "group": "navigation",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "devtimetracker.showStatus",
        "title": "Show Active Coding Time"
      },
      {
        "command": "devtimetracker.togglePomodoro",
        "title": "Toggle Pomodoro Timer"
      },
      {
        "command": "devtimetracker.openDashboard",
        "title": "Open Analytics Dashboard"
      },
      {
        "command": "devtimetracker.manageCustomReminders",
        "title": "Manage Custom Reminders",
        "category": "Dev Time Tracker"
      },
      {
        "command": "devtimetracker.addCustomReminder",
        "title": "Add New Reminder",
        "category": "Dev Time Tracker"
      }
    ],
    "configuration": {
      "title": "Dev Time Tracker Settings",
      "properties": {
        "devtimetracker.apiUrl": {
          "type": "string",
          "default": "https://your-backend.com",
          "description": "Base URL of your tracking API"
        },
        "devtimetracker.apiToken": {
          "type": "string",
          "default": "",
          "description": "Your API token"
        },
        "devtimetracker.pomodoro.workDuration": {
          "type": "number",
          "default": 25,
          "minimum": 1,
          "description": "Duration of work sessions in minutes"
        },
        "devtimetracker.pomodoro.shortBreakDuration": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "description": "Duration of short breaks in minutes"
        },
        "devtimetracker.pomodoro.longBreakDuration": {
          "type": "number",
          "default": 15,
          "minimum": 1,
          "description": "Duration of long breaks in minutes"
        },
        "devtimetracker.pomodoro.sessionsBeforeLongBreak": {
          "type": "number",
          "default": 4,
          "minimum": 1,
          "description": "Number of work sessions before a long break"
        },
        "devtimetracker.pomodoro.autoStartNextSession": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start the next session/break when the current one ends"
        },
        "devtimetracker.metrics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable collection of code metrics and analytics"
        },
        "devtimetracker.metrics.syncInterval": {
          "type": "number",
          "default": 300,
          "minimum": 60,
          "description": "Interval in seconds to sync metrics with the backend"
        },
        "devtimetracker.health": {
          "type": "object",
          "title": "Health Reminders",
          "description": "Health reminders will appear in the status bar. They are non-intrusive and won't interrupt your workflow.",
          "properties": {
            "breakReminderEnabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable break reminders in the status bar"
            },
            "breakReminderInterval": {
              "type": "number",
              "default": 3600,
              "minimum": 300,
              "description": "Time in seconds between break reminders (minimum 5 minutes)"
            },
            "postureReminderEnabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable posture reminders in the status bar"
            },
            "postureReminderInterval": {
              "type": "number",
              "default": 1800,
              "minimum": 300,
              "description": "Time in seconds between posture reminders (minimum 5 minutes)"
            },
            "eyeStrainReminderEnabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable eye strain reminders in the status bar"
            },
            "eyeStrainReminderInterval": {
              "type": "number",
              "default": 1200,
              "minimum": 300,
              "description": "Time in seconds between eye strain reminders (minimum 5 minutes)"
            },
            "eyeStrainSnoozeDuration": {
              "type": "number",
              "default": 300,
              "description": "Time in seconds to snooze eye strain reminders"
            },
            "eyeStrainNotificationType": {
              "type": "string",
              "enum": [
                "info",
                "warning",
                "error",
                "none"
              ],
              "default": "none",
              "description": "Type of notification to show for eye strain reminders"
            },
            "eyeStrainEnableSound": {
              "type": "boolean",
              "default": false,
              "description": "Enable sound for eye strain reminders"
            },
            "postureNotificationType": {
              "type": "string",
              "enum": [
                "info",
                "warning",
                "error",
                "none"
              ],
              "default": "none",
              "description": "Type of notification to show for posture reminders"
            },
            "postureEnableSound": {
              "type": "boolean",
              "default": false,
              "description": "Enable sound for posture reminders"
            }
          }
        },
        "devtimetracker.goals.dailyCodingTarget": {
          "type": "number",
          "default": 1200,
          "minimum": 15,
          "description": "Daily coding target in minutes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.9",
    "@types/vscode": "^1.99.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "simple-git": "^3.28.0"
  }
}
